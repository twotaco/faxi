{
  "family": "faxi-prod-admin",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "PLACEHOLDER_EXECUTION_ROLE_ARN",
  "taskRoleArn": "PLACEHOLDER_TASK_ROLE_ARN",
  "containerDefinitions": [
    {
      "name": "admin",
      "image": "223882168768.dkr.ecr.us-east-1.amazonaws.com/faxi-admin-dashboard:prod",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "NEXT_PUBLIC_API_URL",
          "value": "https://fax.faxi.jp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/faxi-prod-admin",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:3000 || exit 1"
        ],
        "interval": 15,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 15
      }
    }
  ]
}
