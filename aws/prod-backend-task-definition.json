{
  "family": "faxi-prod-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::223882168768:role/faxi-prod-ECSTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::223882168768:role/faxi-prod-ECSTaskRole",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "223882168768.dkr.ecr.us-east-1.amazonaws.com/faxi-backend:prod",
      "portMappings": [
        {
          "containerPort": 4000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "4000"
        },
        {
          "name": "LOG_LEVEL",
          "value": "info"
        },
        {
          "name": "TEST_MODE",
          "value": "false"
        },
        {
          "name": "DATABASE_HOST",
          "value": "prod-faxi-db.cazismkei51t.us-east-1.rds.amazonaws.com"
        },
        {
          "name": "DATABASE_PORT",
          "value": "5432"
        },
        {
          "name": "DATABASE_NAME",
          "value": "faxi_prod"
        },
        {
          "name": "DATABASE_USER",
          "value": "faxi_prod_user"
        },
        {
          "name": "DATABASE_POOL_MIN",
          "value": "2"
        },
        {
          "name": "DATABASE_POOL_MAX",
          "value": "10"
        },
        {
          "name": "DATABASE_SSL",
          "value": "true"
        },
        {
          "name": "REDIS_HOST",
          "value": "prod-faxi-redis.ub4jqi.0001.use1.cache.amazonaws.com"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        },
        {
          "name": "REDIS_DB",
          "value": "0"
        },
        {
          "name": "S3_ENDPOINT",
          "value": "https://s3.us-east-1.amazonaws.com"
        },
        {
          "name": "S3_REGION",
          "value": "us-east-1"
        },
        {
          "name": "S3_BUCKET",
          "value": "prod-faxi-faxes"
        },
        {
          "name": "BASE_URL",
          "value": "https://fax.faxi.jp"
        },
        {
          "name": "GEMINI_MODEL",
          "value": "gemini-2.0-flash-exp"
        },
        {
          "name": "COOKIE_SECURE",
          "value": "true"
        },
        {
          "name": "EMAIL_PROVIDER",
          "value": "ses"
        },
        {
          "name": "EMAIL_FROM_DOMAIN",
          "value": "me.faxi.jp"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:223882168768:secret:faxi/prod/database:password::"
        },
        {
          "name": "TELNYX_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:223882168768:secret:faxi/prod/telnyx:api_key::"
        },
        {
          "name": "GEMINI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:223882168768:secret:faxi/prod/gemini:api_key::"
        },
        {
          "name": "STRIPE_SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:223882168768:secret:faxi/prod/stripe:secret_key::"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:223882168768:secret:faxi/prod/ses:access_key_id::"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:223882168768:secret:faxi/prod/ses:secret_access_key::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/faxi-prod-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:4000/health/live || exit 1"
        ],
        "interval": 15,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 15
      }
    }
  ]
}
