# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=faxi
DATABASE_USER=faxi_user
DATABASE_PASSWORD=your_password_here
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# S3 Configuration
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_BUCKET=faxi-fax-images
S3_ACCESS_KEY_ID=your_access_key
S3_SECRET_ACCESS_KEY=your_secret_key

# Application Configuration
NODE_ENV=development
PORT=4000
LOG_LEVEL=info

# Test Mode (set to true to bypass Telnyx)
TEST_MODE=false

# Telnyx Configuration
TELNYX_API_KEY=your_telnyx_api_key_here
TELNYX_PUBLIC_KEY=your_telnyx_public_key_here
TELNYX_FAX_NUMBER=+1234567890
TELNYX_WEBHOOK_TIMEOUT=5

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# Email Configuration
EMAIL_PROVIDER=sendgrid
EMAIL_WEBHOOK_SECRET=your_email_webhook_secret_here
EMAIL_FROM_DOMAIN=me.faxi.jp

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# AWS SES Configuration (if using AWS SES)
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=your_aws_access_key
AWS_SES_SECRET_ACCESS_KEY=your_aws_secret_key

# Postfix Configuration (if using self-hosted Postfix)
POSTFIX_HOST=mail.faxi.jp
POSTFIX_PORT=587
POSTFIX_USER=webhook@faxi.jp
POSTFIX_PASSWORD=your_postfix_password

# SMTP Configuration (for sending emails)
SMTP_HOST=mail.faxi.jp
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=noreply@faxi.jp
SMTP_PASS=your_smtp_password

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Base URL for webhooks and redirects
BASE_URL=http://localhost:4000

# Marketing Website URL (for CORS)
MARKETING_SITE_URL=http://localhost:4002
