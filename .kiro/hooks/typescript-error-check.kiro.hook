{
  "enabled": true,
  "name": "TypeScript Error Check",
  "description": "Automatically runs TypeScript type checking when .ts or .tsx files are edited to catch type errors early in development",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "**/*.ts",
      "**/*.tsx"
    ]
  },
  "then": {
    "type": "runCommand",
    "command": "npx tsc --noEmit"
  }
}